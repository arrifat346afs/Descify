{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tagpix AI",
  "version": "0.1.4",
  "identifier": "com.tagpix-ai.app",
  "build": {
    "beforeDevCommand": "bun run dev --port 3000",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Tagpix AI",
        "width": 1200,
        "height": 800,
        "decorations": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
