{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tagpix-ai",
  "version": "0.1.0",
  "identifier": "com.tagpix-ai.app",
  "build": {
    "beforeDevCommand": "bun run dev --port 3000",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Tagpix AI",
        "width": 1024,
        "height": 728,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "linux": {
      "appimage": {
        "bundleMediaFramework": false,
        "files": {}
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
