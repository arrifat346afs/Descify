{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Descify",
  "version": "1.0.4",
  "identifier": "com.descify.app",
  "build": {
    "beforeDevCommand": "bun run dev --port 3000",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Descify",
        "width": 1200,
        "height": 800,
        "decorations": false,
        "dragDropEnabled": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/*"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM4QzZCNzI3MDc4QzI5QzgKUldUSUtZd0hKN2ZHeUtwR2JUcko5WHFHcWN6SFlPUWtrYnZ0cy84eUlKUzZMbE1STlkxNzZTT3AK",
      "endpoints": [
        "https://github.com/arrifat346afs/Descify/releases/latest/download/latest.json"
      ],
      "dialog": false
    }
  }
}
